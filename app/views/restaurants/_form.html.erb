<%= form_with(model: restaurant) do |form| %>
  <% if restaurant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>

      <ul>
        <% restaurant.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <section class="card">
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <%= form.label :location %>
      <%= form.text_field :location %>
    </div>

    <% if @is_edit %>
      <div class="form-group">
        <%= form.label :will_split_votes %>
        <%= form.number_field :will_split_votes %>
      </div>

      <div class="form-group">
        <%= form.label :will_not_split_votes %>
        <%= form.number_field :will_not_split_votes %>
      </div>
    <% end %>
  </section>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<% if @is_edit %>
  <%= button_to 'Cancel', restaurant_path(@restaurant), method: 'get' %>
<% else %>
  <%= button_to 'Cancel', restaurants_path, method: 'get' %>
<% end %>
