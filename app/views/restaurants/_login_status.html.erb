<aside id="user-status">
    <% if user_signed_in? %>
        <div>
            <%= "Logged-in as: #{current_user.username}" %><br />
            Not you? <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
        </div>
    <% else %>
        <div>
            <%= link_to 'Login', new_user_session_path %> |
            <%= link_to 'Register', new_user_registration_path %>
        </div>
    <% end %>
</aside>
